
T1 BTFSS PORTA,0
   GOTO OUT1
   GOTO T2

T2 BTFSS PORTA,1
   GOTO OUT1
   GOTO OUT2

OUT1 BCF PORTB,0
   GOTO T1

OUT2 BSF PORTB,0
   GOTO T1













T1 BTFSS PORTA,0
   GOTO T2
   GOTO T3
T2 BTFSS PORTA,1
   GOTO OUT0
   GOTO OUT1
T3 BTFSS PORTA,1
   GOTO OUT2
   GOTO OUT3

OUT0 MOVLW 0
   MOVWF PORTB
   GOTO T1
OUT1 MOVLW 1
   MOVWF PORTB
   GOTO T1

OUT2 MOVLW 2
   MOVWF PORTB
   GOTO T1

OUT3 MOVLW 3
   MOVWF PORTB
   GOTO T1